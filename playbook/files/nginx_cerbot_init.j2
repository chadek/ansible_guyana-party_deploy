server {
	listen 80 default_server;
	listen [::]:80 default_server;

  server_name {{ domain_name }};
	location ~ /\.well-known/acme-challenge {
    allow all;
	  root /var/www/letsencrypt;
	}

	# Deny access to . files
  location ~ /\. { deny all; access_log off; log_not_found off; }

}
